<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_search_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_padding_size_large"
    android:background="@drawable/ml_border">


    <ImageView
        android:id="@+id/img_items"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/margin_padding_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_name_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginRight="@dimen/margin_padding_size_medium"
        android:layout_marginLeft="@dimen/margin_padding_size_medium"
        app:layout_constraintTop_toTopOf="@id/img_items"
        app:layout_constraintStart_toEndOf="@id/img_items"
        />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_size_medium"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_name_items"
        app:layout_constraintStart_toEndOf="@id/img_items"
        app:layout_constraintEnd_toEndOf="@+id/cl_search_product"
        />

    <TextView
        android:id="@+id/tv_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/margin_padding_size_medium"
        app:layout_constraintTop_toBottomOf="@id/tv_price"
        app:layout_constraintStart_toEndOf="@id/img_items"
        />


</androidx.constraintlayout.widget.ConstraintLayout>