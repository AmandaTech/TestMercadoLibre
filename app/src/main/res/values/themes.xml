<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestMercadoLibre" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/yellow_ligth</item>
        <item name="android:windowBackground">@color/yellow_ligth</item>
    </style>
    <style name="DialogMessageText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/ml_txt_medium</item>
    </style>
    <style name="MLCustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <style name="MLCustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/MLCustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="MLCustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MLCustomBottomSheet</item>
    </style>



</resources>

